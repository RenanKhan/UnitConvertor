<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="3mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/angle"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="8mm"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Angle"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="3mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/data"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Data"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="3mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fuel"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Fuel"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="3mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cooking"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Cooking"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>