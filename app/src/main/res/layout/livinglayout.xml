<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="1mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="1mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/temp"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Temperature"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="3mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="12mm"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Time"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="1mm"
        android:background="@drawable/roundedbox"
        android:layout_width="14mm"
        android:layout_height="14mm"
        >
        <LinearLayout
            android:layout_marginLeft="3mm"
            android:layout_marginTop="2mm"
            android:layout_marginBottom="2mm"
            android:layout_marginRight="3mm"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speed"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="1mm"
                android:textColor="#1e1e1e"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Speed"/>
        </LinearLayout>
    </RelativeLayout>
